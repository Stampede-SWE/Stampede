<body class="main-bg">
  <div class="login-container text-c animated flipInX">
    <h3 class="text-whitesmoke-header">Stampede</h3>
    <div class="container-content">
      <%= form_for @user do |f| %>
        <p class="text-l margin-b-sm text-whitesmoke">Create a username</p>
        <div class="form-group">
          <%= f.text_field :username, class: "form-control", placeholder: "Username", required: true %>
        </div>

        <p class="text-l margin-b-sm text-whitesmoke">Create a password</p>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
        </div>

        <%= f.submit "Sign Up", class: "form-button button-l margin-t-md margin-b" %>
        <br>
        <%= link_to "Log In", login_path, class: "text-darkyellow" %>
      <% end %>

      <p class="margin-t text-whitesmoke"><small>Stampede &copy; 2025</small></p>
    </div>
  </div>
</body>