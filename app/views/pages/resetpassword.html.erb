<!DOCTYPE html>

<% content_for :stylesheets do %>
<%= stylesheet_link_tag "pages/temp" %>
<% end %>

<head>
</head>

<body>
  <%# !START OF HEADER %>
  <div class="header">
    <div class="header-logo">
      <%= image_tag "usf-logo.png", alt: "USF Logo", class: "header-logo" %>
    </div>
    <div class="header-middle">
      <p class="header-text">
        Stampede
      </p>
    </div>
    <div class="header-right">
      <div class="header-profile">
        <a href="/profile"> <%= image_tag "default-profile.png", alt: "Profile Logo", class: "profile-click" %> </a>
      </div>
      <div class="header-logout">
        <%= button_to "Logout", logout_path, method: :delete, class: "logout-button" %>
      </div>
    </div>
  </div>
  <%# END OF HEADER! %>

    <% if flash[:notice] %>
      <div class="flash-message notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="flash-message alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

  <div class="profile-container">
    <h2 class="profile-header"> Editing <%= @user.displayname != "" && !!@user.displayname ? @user.displayname : @user.username %>'s Password</h2>
    <%= form_for @user do |f| %>
      <div class="profile-info">
        <div class="info-type">
          New Password
        </div>
        <%= f.password_field :password, class: "info-text", placeholder: "New Password", required: true, minlength: 6, message: "must be at least 6 characters long" %>
      </div>
      <div class="profile-info">
        <div class="info-type">
          Confirm Password
        </div>
        <%= f.password_field :password_confirmation, class: "info-text", placeholder: "Confirm New Password", required: true, message: "must match" %>
      </div>
      <%= f.submit "Update Password", class: "profile-edit-button", data: { confirm: "Are you sure you want to change your password?" }%>
    <% end %>
    <%= button_to "Back To Profile", "profile", method: :get, class: 'to-profile-button' %>
  </div>
</body>