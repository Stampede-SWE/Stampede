<h1>Send a Message</h1>

<%= form_with model: @message, local: true do |form| %>
  <p>
    To: <%= @recipient.username %>
    <%= form.hidden_field :recipient_id, value: @recipient.id %>
  </p>

  <p>
    <%= form.label :body, "Message" %><br>
    <%= form.text_area :body %>
  </p>

  <%= form.submit "Send" %>
<% end %>
