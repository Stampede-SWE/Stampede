<!DOCTYPE html>

<% content_for :stylesheets do %>
<%= stylesheet_link_tag "pages/temp" %>
<% end %>

<head>
</head>

<body>
  <%# !START OF HEADER %>
  <div class="header">
    <div class="header-logo">
      <%= image_tag "usf-logo.png", alt: "USF Logo", class: "header-logo" %>
    </div>
    <div class="header-middle">
      <p class="header-text">
        Stampede
      </p>
    </div>
    <div class="header-right">
      <div class="header-profile">
        <a href="/messages/unified"> <%= image_tag "message-logo.png", alt: "Message Logo", class: "profile-click" %> </a>
      </div>
      <div class="header-profile">
        <a href="/profile"> <%= image_tag "default-profile.png", alt: "Profile Logo", class: "profile-click" %> </a>
      </div>
      <div class="header-logout">
        <%= button_to "Logout", logout_path, method: :delete, class: "logout-button" %>
      </div>
    </div>
  </div>
  <%# END OF HEADER! %>

  <div>
    <hr style="visibility: hidden;">
  </div>

  <h1 class="show-title">Send a Message</h1>

  <div class="message-form-container">
    <%= form_with model: @message, local: true do |form| %>
      <div class="form-group">
        <label><strong>Listing:</strong> <%= @listing.title %></label>
        <%= form.hidden_field :listing_id, value: @listing.id %>
      </div>

      <div class="form-group">
        <label><strong>To:</strong> <%= @recipient.displayname %></label>
        <%= form.hidden_field :recipient_id, value: @recipient.id %>
      </div>

      <div class="form-group">
        <%= form.label :body, "Message" %>
        <%= form.text_area :body, class: "form-control", style: "background-color: #ccc; color: #333; border: 1px solid #333; margin-top: 5px;" %>
      </div>

      <div class="form-buttons">
        <%= link_to "Back to Listings", listings_path, class: "btn btn-secondary back-button" %>
        <%= form.submit "Send", class: "btn btn-success send-button" %>
      </div>
    <% end %>
  </div>

</body>
